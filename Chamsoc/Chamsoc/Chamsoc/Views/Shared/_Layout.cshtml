    @RenderSection("Scripts", required: false)
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btn = document.getElementById("chatbotToggleBtn");
            const container = document.getElementById("chatbot-container");
            const messagesContainer = document.getElementById("chatbot-messages");
            const questionInput = document.getElementById("chatbot-question");
            const closeBtn = document.getElementById("close-chatbot");
            const zaloBtn = document.getElementById("zaloChatBtn");

            let isDragging = false;
            let isDraggingZalo = false;
            let offsetX = 0;
            let offsetY = 0;
            let zaloOffsetX = 0;
            let zaloOffsetY = 0;
            let startX = 0;
            let startY = 0;
            let zaloStartX = 0;
            let zaloStartY = 0;

            // Thêm sự kiện click outside để đóng chatbot
            document.addEventListener('click', function(event) {
                const isClickInside = container.contains(event.target) || btn.contains(event.target);
                if (!isClickInside && container.style.display === 'block') {
                    container.style.display = 'none';
                }
            });

            // Xử lý kéo thả cho nút chatbot
            btn.addEventListener("mousedown", function (e) {
                if (e.target === btn || e.target.parentElement === btn) {
                    isDragging = true;
                    offsetX = e.clientX - btn.getBoundingClientRect().left;
                    offsetY = e.clientY - btn.getBoundingClientRect().top;
                    startX = e.clientX;
                    startY = e.clientY;
                    btn.style.transition = "none";
                }
            });

            // Xử lý kéo thả cho nút Zalo
            zaloBtn.addEventListener("mousedown", function (e) {
                if (e.target === zaloBtn || e.target.parentElement === zaloBtn) {
                    isDraggingZalo = true;
                    zaloOffsetX = e.clientX - zaloBtn.getBoundingClientRect().left;
                    zaloOffsetY = e.clientY - zaloBtn.getBoundingClientRect().top;
                    zaloStartX = e.clientX;
                    zaloStartY = e.clientY;
                    zaloBtn.style.transition = "none";
                }
            });

            document.addEventListener("mousemove", function (e) {
                if (isDragging) {
                    const x = e.clientX - offsetX;
                    const y = e.clientY - offsetY;

                    btn.style.left = `${x}px`;
                    btn.style.top = `${y}px`;

                    if (container.style.display === 'block') {
                        const containerWidth = container.offsetWidth;
                        container.style.left = `${x + btn.offsetWidth - containerWidth}px`;
                        container.style.top = `${y - container.offsetHeight - 10}px`;
                    }
                }

                if (isDraggingZalo) {
                    const x = e.clientX - zaloOffsetX;
                    const y = e.clientY - zaloOffsetY;

                    zaloBtn.style.left = `${x}px`;
                    zaloBtn.style.top = `${y}px`;
                }
            });

            document.addEventListener("mouseup", function (e) {
                if (isDragging) {
                    const endX = e.clientX;
                    const endY = e.clientY;
                    const distance = Math.sqrt(Math.pow(endX - startX, 2) + Math.pow(endY - startY, 2));
                    
                    if (distance < 5) { // Nếu di chuyển ít hơn 5px, coi như là click
                        const isVisible = container.style.display === 'block';
                        if (!isVisible) {
                            container.style.display = 'block';
                            if (messagesContainer.innerHTML.trim() === '') {
                                messagesContainer.innerHTML = `<div class="bot-message"><strong>Bot:</strong> Xin chào! Mình là trợ lý chăm sóc sức khỏe. Bạn cần mình hỗ trợ điều gì?</div>`;
                            }
                        } else {
                            container.style.display = 'none';
                        }
                    }
                    
                    isDragging = false;
                    btn.style.transition = "";
                }

                if (isDraggingZalo) {
                    const endX = e.clientX;
                    const endY = e.clientY;
                    const distance = Math.sqrt(Math.pow(endX - zaloStartX, 2) + Math.pow(endY - zaloStartY, 2));
                    
                    if (distance < 5) { // Nếu di chuyển ít hơn 5px, coi như là click
                        window.open('https://zalo.me/0522336052', '_blank');
                    }
                    
                    isDraggingZalo = false;
                    zaloBtn.style.transition = "";
                }
            });

            closeBtn.addEventListener("click", function (e) {
                e.stopPropagation();
                container.style.display = 'none';
            });

            questionInput.addEventListener("keydown", function (event) {
                if (event.key === "Enter") {
                    event.preventDefault();
                    sendChatbotQuestion();
                }
            });

            // Ngăn sự kiện click trong container lan ra ngoài
            container.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        });

        async function sendChatbotQuestion() {
            const questionInput = document.getElementById('chatbot-question');
            const messagesContainer = document.getElementById('chatbot-messages');
            const question = questionInput.value.trim();
            
            if (!question) {
                messagesContainer.innerHTML += `<div class="bot-message"><strong>Bot:</strong> ❌ Vui lòng nhập nội dung câu hỏi.</div>`;
                return;
            }

            messagesContainer.innerHTML += `<div class="user-message"><strong>Bạn:</strong> ${question}</div>`;
            questionInput.value = '';

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                
                const response = await fetch('/Chatbot/Ask', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token || ''
                    },
                    body: JSON.stringify({
                        messages: [
                            {
                                role: 'user',
                                content: question
                            }
                        ]
                    })
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const data = await response.json();
                messagesContainer.innerHTML += `<div class="bot-message"><strong>Bot:</strong> ${data.reply}</div>`;
            } catch (error) {
                console.error('Error:', error);
                messagesContainer.innerHTML += `<div class="bot-message"><strong>Bot:</strong> Xin lỗi, có lỗi xảy ra. Vui lòng thử lại sau.</div>`;
            }

            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
    </script>
