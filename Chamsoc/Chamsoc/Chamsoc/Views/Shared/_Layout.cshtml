                                            {
                                                seniorComplaints = DbContext.Notifications
                                                .Where(n => n.UserId == seniorUserId && !n.IsRead && n.Message.Contains("Khiếu nại"))
                                                .OrderByDescending(n => n.CreatedAt)
                                                .ToList();
                                            }
