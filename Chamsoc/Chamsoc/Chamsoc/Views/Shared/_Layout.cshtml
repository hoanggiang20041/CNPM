    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btn = document.getElementById("chatbotToggleBtn");
            const container = document.getElementById("chatbot-container");
            const messagesContainer = document.getElementById("chatbot-messages");
            const questionInput = document.getElementById("chatbot-question");
            const closeBtn = document.getElementById("close-chatbot");

            let isDragging = false;
            let offsetX = 0;
            let offsetY = 0;

            btn.addEventListener("mousedown", function (e) {
                isDragging = true;
                offsetX = e.clientX - btn.getBoundingClientRect().left;
                offsetY = e.clientY - btn.getBoundingClientRect().top;
                btn.style.transition = "none";
            });

            document.addEventListener("mousemove", function (e) {
                if (isDragging) {
                    const x = e.clientX - offsetX;
                    const y = e.clientY - offsetY;

                    btn.style.left = `${x}px`;
                    btn.style.top = `${y}px`;

                    // Nếu khung chat đang mở, cập nhật vị trí lệch trái
                    if (container.style.display === 'block') {
                        const containerWidth = container.offsetWidth;
                        container.style.left = `${x + btn.offsetWidth - containerWidth}px`;
                        container.style.top = `${y - container.offsetHeight - 10}px`;
                    }
                }
            });

            document.addEventListener("mouseup", function () {
                isDragging = false;
                btn.style.transition = "";
            });

            btn.addEventListener("click", function () {
                const isVisible = container.style.display === 'block';

                if (!isVisible) {
                    container.style.display = 'block';

                    const rect = btn.getBoundingClientRect();
                    const scrollTop = window.scrollY || document.documentElement.scrollTop;
                    const scrollLeft = window.scrollX || document.documentElement.scrollLeft;

                    const containerWidth = container.offsetWidth;

                    // Góc phải của khung chat khớp với góc phải của bong bóng
                    container.style.left = `${rect.right + scrollLeft - containerWidth}px`;
                    container.style.top = `${rect.top + scrollTop - container.offsetHeight - 10}px`;

                    if (messagesContainer.innerHTML.trim() === '') {
                        messagesContainer.innerHTML = `<div class="bot-message"><strong>Bot:</strong> Xin chào! Mình là trợ lý chăm sóc sức khỏe. Bạn cần mình hỗ trợ điều gì?</div>`;
                    }
                } else {
                    container.style.display = 'none';
                }
            });

            closeBtn.addEventListener("click", function () {
                container.style.display = 'none';
            });

            questionInput.addEventListener("keydown", function (event) {
                if (event.key === "Enter") {
                    event.preventDefault();
                    sendChatbotQuestion();
                }
            });
        });

        async function sendChatbotQuestion() {
            const questionInput = document.getElementById('chatbot-question');
            const messagesContainer = document.getElementById('chatbot-messages');
            const question = questionInput.value.trim();
            if (!question) return;

            messagesContainer.innerHTML += `<div class="user-message"><strong>Bạn:</strong> ${question}</div>`;
            questionInput.value = '';

            const response = await fetch('/Chatbot/Ask', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    messages: [
                        {
                            role: 'user',
                            content: question
                        }
                    ]
                })
            });

            const data = await response.json();
            messagesContainer.innerHTML += `<div class="bot-message"><strong>Bot:</strong> ${data.reply}</div>`;
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // Hàm hiển thị popup cuộc gọi
        function showCallPopup(notificationId, message, createdAt, userId) {
            const currentUserId = '@(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "anonymous")';
            const currentRole = '@(Context.Session.GetString("UserRole") ?? "Unknown")';
            let sender, receiver;

            if (currentRole === "Caregiver") {
                sender = "Caregiver";
                receiver = "Senior";
            } else if (currentRole === "Senior") {
                sender = "Senior";
                receiver = "Caregiver";
            } else {
                sender = "Unknown";
                receiver = "Unknown";
            }

            // Cập nhật nội dung của modal
            document.getElementById('callSender').textContent = sender;
            document.getElementById('callMessage').textContent = message;
            document.getElementById('callTime').textContent = createdAt;
            document.getElementById('callReceiver').textContent = receiver;

            // Lưu notificationId và userId vào data attribute của các nút
            const acceptCallButton = document.getElementById('acceptCallButton');
            const callBackButton = document.getElementById('callBackButton');
            acceptCallButton.setAttribute('data-notification-id', notificationId);
            acceptCallButton.setAttribute('data-user-id', userId);
            callBackButton.setAttribute('data-notification-id', notificationId);
            callBackButton.setAttribute('data-user-id', userId);

            // Hiển thị modal
            const callPopupModal = new bootstrap.Modal(document.getElementById('callPopupModal'));
            callPopupModal.show();
        }

        // Xử lý sự kiện nhấn nút "Chấp nhận"
        document.getElementById('acceptCallButton').addEventListener('click', function () {
            const notificationId = this.getAttribute('data-notification-id');
            const userId = this.getAttribute('data-user-id');
            fetch(`/Notifications/AcceptCall?notificationId=${notificationId}&userId=${userId}`, {
                method: 'POST'
            })
            .then(response => {
                if (response.ok) {
                    alert('Đã chấp nhận cuộc gọi!');
                    const callPopupModal = bootstrap.Modal.getInstance(document.getElementById('callPopupModal'));
                    callPopupModal.hide();
                    fetchNotifications();
                } else {
                    alert('Có lỗi xảy ra khi chấp nhận cuộc gọi.');
                }
            })
            .catch(err => {
                console.error('Lỗi khi chấp nhận cuộc gọi:', err);
                alert('Có lỗi xảy ra khi chấp nhận cuộc gọi.');
            });
        });

        // Xử lý sự kiện nhấn nút "Gọi lại"
        document.getElementById('callBackButton').addEventListener('click', function () {
            const notificationId = this.getAttribute('data-notification-id');
            const userId = this.getAttribute('data-user-id');
            fetch(`/Notifications/CallBack?notificationId=${notificationId}&userId=${userId}`, {
                method: 'POST'
            })
            .then(response => {
                if (response.ok) {
                    alert('Đã gọi lại thành công!');
                    const callPopupModal = bootstrap.Modal.getInstance(document.getElementById('callPopupModal'));
                    callPopupModal.hide();
                    fetchNotifications();
                } else {
                    alert('Có lỗi xảy ra khi gọi lại.');
                }
            })
            .catch(err => {
                console.error('Lỗi khi gọi lại:', err);
                alert('Có lỗi xảy ra khi gọi lại.');
            });
        });

        // Hàm lấy danh sách thông báo chưa đọc
        async function fetchNotifications() {
            try {
                const response = await fetch('/Notifications/GetUnreadNotifications');
                const data = await response.json();
                const role = '@(Context.Session.GetString("UserRole") ?? "Unknown")';
                let dropdownId, badgeId;

                if (role === "Admin") {
                    dropdownId = 'admin-notifications';
                    badgeId = 'adminNotificationsDropdown';
                } else if (role === "Senior") {
                    dropdownId = 'senior-notifications';
                    badgeId = 'seniorNotificationsDropdown';
                } else if (role === "Caregiver") {
                    dropdownId = 'caregiver-notifications';
                    badgeId = 'caregiverNotificationsDropdown';
                }

                const notificationDropdown = document.getElementById(dropdownId);
                const notificationBadge = document.querySelector(`#${badgeId} + .notification-badge`);

                if (notificationDropdown) {
                    notificationDropdown.innerHTML = '';
                    if (data.length > 0) {
                        data.forEach(notification => {
                            const item = document.createElement('li');
                            item.className = 'notification-item';
                            if (notification.type === "Call") {
                                item.onclick = () => showCallPopup(notification.id, notification.message, notification.createdAt, notification.userId);
                                item.innerHTML = `
                                    <strong>${notification.createdAt}</strong>
                                    <p>${notification.message}</p>
                                `;
                            } else {
                                const link = document.createElement('a');
                                link.className = 'text-decoration-none text-dark';
                                link.href = `/Notifications/Index?notificationId=${notification.id}`;
                                link.innerHTML = `
                                    <strong>${notification.createdAt}</strong>
                                    <p>${notification.message}</p>
                                `;
                                item.appendChild(link);
                            }
                            notificationDropdown.appendChild(item);
                        });
                        if (notificationBadge) {
                            notificationBadge.textContent = data.length;
                            notificationBadge.style.display = 'block';
                        }
                    } else {
                        const item = document.createElement('li');
                        item.className = 'dropdown-item text-center';
                        item.textContent = 'Không có thông báo mới';
                        notificationDropdown.appendChild(item);
                        if (notificationBadge) {
                            notificationBadge.style.display = 'none';
                        }
                    }
                }
            } catch (err) {
                console.error("Lỗi lấy thông báo:", err);
            }
        }

        // Gọi hàm khi trang tải
        window.addEventListener('DOMContentLoaded', fetchNotifications);

        // Cập nhật thông báo realtime qua SignalR
        const currentUserId = '@(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "anonymous")';
        const connection = new signalR.HubConnectionBuilder()
            .withUrl(`  https://9772-118-68-26-210.ngrok-free.app/callHub?userId=${currentUserId}`)
            .withAutomaticReconnect()
            .build();

        connection.on("ReceiveNotification", () => {
            console.log("Nhận thông báo mới");
            fetchNotifications();
        });

        async function startConnection() {
            try {
                await connection.start();
                console.log("Đã kết nối SignalR:", connection.connectionId);
            } catch (err) {
                console.error("Lỗi kết nối SignalR:", err);
                setTimeout(startConnection, 5000);
            }
        }

        startConnection();
    </script>

