                                            if (adminUnreadCount > 0)
                                            {
                                                adminNotifications = DbContext.Notifications
                                                .Where(n => n.UserId == adminUserId && !n.IsRead)
                                                .OrderByDescending(n => n.CreatedAt)
                                                .ToList();
                                            }
                                        }
                                        catch (Exception ex)
                                        {
                                            <li class="nav-item">
