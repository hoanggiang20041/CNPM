@{
    ViewData["Title"] = "Gửi yêu cầu liên hệ";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-bell me-2"></i>Gửi yêu cầu liên hệ
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Bạn đang gửi yêu cầu liên hệ đến <strong>@ViewBag.CaregiverName</strong>. 
                        Vui lòng nhập lời nhắn của bạn bên dưới.
                    </p>

                    <form asp-action="SendContactRequest" method="post">
                        <input type="hidden" name="caregiverId" value="@ViewBag.CaregiverId" />
                        
                        <div class="mb-4">
                            <label for="message" class="form-label">Lời nhắn</label>
                            <textarea name="message" id="message" class="form-control" 
                                    rows="5" placeholder="Nhập lời nhắn của bạn..."
                                    required></textarea>
                            <div class="form-text">
                                Hãy mô tả rõ lý do bạn muốn liên hệ với người chăm sóc này.
                            </div>
                        </div>

                        <div class="d-flex gap-3">
                            <a href="@Url.Action("ListCaregivers", "Caregivers")" 
                               class="btn btn-outline-secondary d-inline-flex align-items-center gap-2">
                                <i class="bi bi-arrow-left"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary d-inline-flex align-items-center gap-2">
                                <i class="bi bi-send"></i>Gửi yêu cầu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 